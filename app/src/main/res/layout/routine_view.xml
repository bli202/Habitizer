<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <!--
      No ability to edit or delete in MS1, will add in MS2
      -->

    <TextView
        android:id="@+id/RoutineTitle"
        android:layout_width="261dp"
        android:layout_height="66dp"
        android:gravity="center"
        android:text="@string/routine"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/RoutineTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/RoutineTime"
        android:layout_width="154dp"
        android:layout_height="48dp"
        android:autofillHints=""
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:text="@string/estimated_routine_time"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/RoutineTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/enter_routine_button"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Enter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/RoutineTitle"
        app:layout_constraintTop_toBottomOf="@+id/RoutineTime" />


</androidx.constraintlayout.widget.ConstraintLayout>